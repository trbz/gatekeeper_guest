<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/myCoordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.edu.pw.elka.gatekeeper.outside.gatekeeper_guest.MainActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:hint="@string/guest_id"
        android:focusableInTouchMode="true"
        android:id="@+id/txt_station_id">
    </EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="150dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/connect"
        android:text="@string/connect"
        style="?android:attr/buttonBarButtonStyle">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:layout_marginStart="150dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/disconnect"
        android:text="@string/disconnect"
        style="?android:attr/buttonBarButtonStyle">
    </Button>

    <TextView
        android:id="@+id/access_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOU CAN ACCESS: "
        android:textAlignment="center"
        android:layout_marginTop="220dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_purple"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tx_expiration_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXPIRATION TIME: "
        android:textAlignment="center"
        android:layout_marginTop="250dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_purple"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:backgroundTintMode="multiply">

        <Button
            android:id="@+id/button_unlock"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/unlock"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="invisible"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>